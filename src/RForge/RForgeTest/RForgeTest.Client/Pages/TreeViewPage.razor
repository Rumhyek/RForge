@page "/treeview"

@rendermode InteractiveServer

@using RForgeBlazor

@using RForgeTest.Client.TestModels

<section class="section">
    <div class="container is-max-tablet">

        <div class="checkboxes block">
            <label class="checkbox">
                <input type="checkbox" @bind=AllowSelection />
                Allow Selection
            </label>

            <label class="checkbox">
                <input type="checkbox" @bind=AllowExpand />
                Allow Expand
            </label>
        </div>

        <div class="buttons block">
            <button type="button" class="button" @onclick=OnLoadUsers>Load Users</button>
            <button type="button" class="button" @onclick=ClearUsers>Clear Users</button>
        </div>

    </div>
</section>

<section class="section">
    <div class="container is-max-desktop">
        <div class="columns">

            <div class="column">
                <h1 class="subtitle">Loaded User Data</h1>
                <RfTreeView AllowSelection=AllowSelection AllowExpand=AllowExpand ShowAsPrerender=@(RootUsers == null)>

                    <PrerenderNodes>

                        <RfTreeLabel />
                        <RfTreeList>
                            <RfTreeNode>
                                <Children>
                                    <RfTreeNode />
                                    <RfTreeNode>
                                        <Children>
                                            <RfTreeLabel />
                                            <RfTreeNode />
                                            <RfTreeNode />
                                            <RfTreeNode />

                                        </Children>
                                    </RfTreeNode>
                                    <RfTreeNode />
                                </Children>
                            </RfTreeNode>
                        </RfTreeList>

                    </PrerenderNodes>

                    <Nodes>
                        <RfTreeLabel>Global</RfTreeLabel>
                        <RfTreeList>

                            @foreach (var user in RootUsers)
                            {
                                @TreeBuilder(user)
                            }

                        </RfTreeList>
                    </Nodes>

                </RfTreeView>
            </div>
            <div class="column">
                <h1 class="subtitle">Prerender Structure Match</h1>
                <RfTreeView>

                    <Nodes>
                        <RfTreeLabel>Title</RfTreeLabel>
                        <RfTreeList>
                            <RfTreeNode IsExpanded="true">
                                <Node>Node 1</Node>
                                <Children>
                                    <RfTreeNode>
                                        <Node>Node 1.1</Node>
                                    </RfTreeNode>
                                    <RfTreeNode IsExpanded="true">
                                        <Node>Node 1.2</Node>
                                        <Children>
                                            <RfTreeLabel>Title</RfTreeLabel>

                                            <RfTreeNode>
                                                <Node>Node 1.2.1</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.2.2</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.2.3</Node>
                                            </RfTreeNode>
                                        </Children>
                                    </RfTreeNode>
                                    <RfTreeNode IsLoading="true">
                                        <Node>Node 1.2</Node>
                                        <Children>
                                            <RfTreeLabel>Title</RfTreeLabel>

                                            <RfTreeNode>
                                                <Node>Node 1.2.1</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.2.2</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.2.3</Node>
                                            </RfTreeNode>
                                        </Children>
                                    </RfTreeNode>
                                    <RfTreeNode>
                                        <Node>Node 1.3</Node>
                                    </RfTreeNode>
                                    <RfTreeNode IsExpanded="true">
                                        <Node>Node 1.4</Node>
                                        <Children>

                                            <RfTreeNode>
                                                <Node>Some lab list</Node>
                                            </RfTreeNode>
                                            <RfTreeLabel>Categories</RfTreeLabel>
                                            <RfTreeNode>
                                                <Node>Node 1.4.2</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.4.3</Node>
                                            </RfTreeNode>
                                            <RfTreeLabel>Categories</RfTreeLabel>
                                            <RfTreeNode>
                                                <Node>Node 1.4.2</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.4.3</Node>
                                            </RfTreeNode>
                                            <RfTreeNode IsExpanded="true">
                                                <Node>Node 1.2</Node>
                                                <Children>

                                                    <RfTreeNode>
                                                        <Node>Node 1.2.1</Node>
                                                    </RfTreeNode>
                                                    <RfTreeNode>
                                                        <Node>Node 1.2.2</Node>
                                                    </RfTreeNode>
                                                    <RfTreeNode>
                                                        <Node>Node 1.2.3</Node>
                                                    </RfTreeNode>
                                                </Children>
                                            </RfTreeNode>

                                            <RfTreeLabel>Categories</RfTreeLabel>
                                            <RfTreeNode>
                                                <Node>Node 1.4.2</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.4.3</Node>
                                            </RfTreeNode>
                                            <RfTreeLabel>Categories</RfTreeLabel>
                                            <RfTreeNode>
                                                <Node>Node 1.4.2</Node>
                                            </RfTreeNode>
                                            <RfTreeNode>
                                                <Node>Node 1.4.3</Node>
